#include "globals.ps"

sampler s_diffuseMap: register(s0);

float4 main(const float2 texCoord: TEXCOORD0) : COLOR 
{
	const float4 col = tex2D(s_diffuseMap, texCoord);
	return col*float4(c_lightTotalAmbientCol, 1.0f);
}