sampler s_texMap: register(s0);

struct v2f
{
	float2 texCoord:    TEXCOORD0;
	float4 color:       COLOR0;
};

float4 main(const v2f input) : COLOR 
{
	return tex2D(s_texMap, input.texCoord)*input.color;
}