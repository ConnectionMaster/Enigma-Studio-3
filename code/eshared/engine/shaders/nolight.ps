sampler s_diffuseMap: register(s0);

struct a2f
{
    float4 pos:         POSITION;
    float3 color:       COLOR0;
    float2 texCoord:    TEXCOORD0;
};

float4 main(const a2f input) : COLOR 
{
	return tex2D(s_diffuseMap, input.texCoord)*float4(input.color, 1.0f);
}