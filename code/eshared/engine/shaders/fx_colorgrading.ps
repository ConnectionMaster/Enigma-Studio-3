sampler s_source: register(s0);
sampler s_lookupMap: register(s4);

float4 main(const float2 texCoord: TEXCOORD0) : COLOR
{
    const float3 color = tex2D(s_source, texCoord).xyz;
    const float3 final = tex3D(s_lookupMap, color).xyz;
    return float4(final, 1.0f);
}